@using MinPro.datamodels;
@model MCustomerRelation

@{
    Layout = null;
    ViewData["Title"] = "Create Relation ";
}
<div class="h6 md-4">@ViewData["Title"]</div>

<div class="card">
    <div class="card-body">

        <form asp-action="Create" method="post" id="form_input">

            <div class="mb-4 row">
                <label for="name" class="col-sm-4 col-form-label">Nama</label>
                <div class="col-sm-12">
                    <input type="text" class="form-control" id="name" name="name" value="@Model.Name">
                    <span id="validate_name" class="text-danger"></span>
                </div>
            </div>
            <br>
            <div class="form-group row">
                <div class="col-sm-12">
                    <button type="submit" class="btn btn-light">Input</button>
                    <a class="btn btn-light" asp-controller="CustomerRelation" asp-action="Index">Back</a>
                </div>
            </div>
        </form>

    </div>
</div>


<script>
    $("#form_input").validate({
        errorClass: "text-danger",
        rules: {
            name: {
                required: true,
                minlength: 1,
            }
        },
        messages: {
            name: {
                required: "Tolong isi Nama",
                minlength: "Tolong Lebih Dari 5",

            }
        },
        submitHandler: function (form) {
            var dataForm = $(form).serialize()

            var name = $("#name").val()

            $.ajax({
                url: "/CustomerRelation/CheckNameIsExist",
                type: "get",
                //method : "get",
                data: { name: name },
                dataType: "json",

                success: function (respon) {

                    if (respon) {

                        $("#validate_Name").text("Nama Sudah Ada")
                        return true;
                    }
                    else {

                        fungsiSubmit(dataForm)
                    }
                }

            })
        }

    })

    function fungsiSubmit(dataParam) {
        $.ajax({
            url: '/CustomerRelation/Create',
            type: "post",
            data: dataParam,
            dataType: "json",
            success: function (respon) {
                var data = respon.dataRespon
                if (data.success) {
                    $("#modal").modal("hide")

                    toastr.success(
                        data.message,
                        '',
                        {
                            timeOut: 1000,
                            fadeOut: 1000,
                            onHidden: function () {
                                window.location.reload()
                            }
                        }
                    )
                }
                else {
                    toastr.errorClass(data.message)
                }
            }
        })
    }

</script>

