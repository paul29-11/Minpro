            <script>
    $("#form_input").validate({
        errorClass: "text-danger",
        rules: {
            Email: {
                required: true,
                email: true,
            }
        },
        messages: {
            Email: {
                required: "Masukkan Email",
                email: "Email tidak Valid",
            }
        },
        submitHandler: function () {
            // Check if email exists
            var email = $("#Email").val();
            var id = @Model.Id;

            $.ajax({
                url: '/Profile/CheckEmailIsExist',
                type: 'post',
                data: { email: email, id: id },
                dataType: 'json',
                success: function (result) {
                    if (result) {
                        toastr.warning("Email is already registered.");
                    } else {
                        // Email does not exist, send OTP
                        sendOtpToEmail(email, id);
                    }
                },
                error: function () {
                    toastr.error("Failed to check email.");
                }
            });
        }
    });

