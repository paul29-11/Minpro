@using MinPro.viewmodels;

@{
    ViewData["Title"] = "Rumah Sakit Sejahtera";
    Layout = "~/Views/Shared/_LayoutLandingPage.cshtml";
}

<!-- slider_area_start -->
<div class="slider_area">
    <div class="slider_active owl-carousel">
        <div class="single_slider d-flex align-items-center" style="background-image: url(template/img/banner/images1.jpg);">
            <div class="container">
                <div class="row">
                    <div class="col-xl-12">
                        <div class="slider_text ">
                            
                            <h3>
                                <span style="color:blue;">@ViewData["Title"]</span> <br>
                                
                            </h3>
                            <br />
                            
                            <a href="#" class="boxed-btn3">Cek Untuk Layanan Kami</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- slider_area_end -->

<!-- service_area_start -->
<div class="service_area">
    <div class="container p-0">
        <div class="row no-gutters">
            <div class="col-xl-4 col-md-4">
                <div class="single_service">
                    <div class="icon">
                        <i class="flaticon-electrocardiogram"></i>
                    </div>
                    <h3>Rumah Sakit Berbasis Digital</h3>
                    <p>Menerapkan sistem manajemen operasional berbasis teknologi informasi jaringan.</p>
                </div>
            </div>
            <div class="col-xl-4 col-md-4">
                <div class="single_service">
                    <div class="icon">
                        <i class="flaticon-emergency-call"></i>
                    </div>
                    <h3>
                        Perawatan Berkelanjutan
                    </h3>
                    <p>Kesinambungan pelayanan yang dilakukan mulai dari perawatan sampai pasien pulang ke rumah oleh tim home care multi-profesi</p>
                </div>
            </div>
            <div class="col-xl-4 col-md-4">
                <div class="single_service">
                    <div class="icon">
                        <i class="flaticon-first-aid-kit"></i>
                    </div>
                    <h3>Praktik Berbasis Bukti</h3>
                    <p>Seluruh klien dikaji berdasarkan riwayat penyakit dahulu, keluarga, dan pola hidup</p>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- service_area_end -->
<!-- welcome_docmed_area_start -->
<div class="welcome_docmed_area">
    <div class="container">
        <div class="row">
            <div class="col-xl-6 col-lg-6">
                <div class="welcome_thumb">
                    <div class="thumb_1">
                        <img src="~/template/img/about/1.png" alt="">
                    </div>
                    <div class="thumb_2">
                        <img src="~/template/img/about/2.png" alt="">
                    </div>
                </div>
            </div>
            <div class="col-xl-6 col-lg-6">
                <div class="welcome_docmed_info">
                    <h2>Selamat Datang di Klinik</h2>
                    <h3>
                        Layanan kesehatan yang lebih nyaman dan lebih dekat dengan Anda
                    </h3>
                    <p>
                        Untuk Anda dan keluarga, Klinik hadir menyediakan berbagai layanan kesehatan berkualitas dan terstandarisasi mulai dari layanan umum, tumbuh kembang anak, hingga pengobatan syaraf
                    </p>
                    <ul>
                        <li> <i class="flaticon-right"></i> Layanan kesehatan berkualitas sesuai kebutuhan </li>
                        <li> <i class="flaticon-right"></i> Pelayanan yang nyaman di klinik dan di rumah</li>
                        <li> <i class="flaticon-right"></i> Pendaftaran mudah dan rekam medis terintegrasi </li>
                    </ul>
                    <a href="#" class="boxed-btn3-white-2">Selengkapnya</a>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- welcome_docmed_area_end -->
<!-- offers_area_start -->
<div class="our_department_area">
    <div class="container">
        <div class="row">
            <div class="col-xl-12">
                <div class="section_title text-center mb-55">
                    <h3>Fasilitas Kami</h3>
                    
                </div>
            </div>
        </div>
        <div class="row">
        @foreach (var item in ViewBag.listFacility)
        {
            <div class="col-xl-4 col-md-6 col-lg-4">
                <div class="single_department">
                    <div class="department_content">
                        <h3><a href="#">@item.Name</a></h3>
                        <p>@item.FullAddress</p>
                    </div>
                </div>
            </div>
        }
        </div>
    </div>
</div>
<!-- offers_area_end -->
<!-- testmonial_area_start -->
<div class="testmonial_area">
    <div class="testmonial_active owl-carousel">
        <div class="single-testmonial testmonial_bg_1 overlay2">
            <div class="container">
                <div class="row">
                    <div class="col-xl-10 offset-xl-1">
                        <div class="testmonial_info text-center">
                            <div class="quote">
                                <i class="flaticon-straight-quotes"></i>
                            </div>
                            <p>
                                Rumah Sakit Sejahtera terus melakukan beragam inovasi untuk memberikan kualitas 
                                layanan terbaik dan personal sesuai kebutuhan pelanggan, serta tentunya 
                                precise dalam skrining, diagnosa maupun pengobatan.
                                
                            </p>
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- testmonial_area_end -->
<!-- expert_doctors_area_start -->
<div class="expert_doctors_area">
    <div class="container">
        <div class="row">
            <div class="col-xl-12">
                <div class="doctors_title mb-55">
                    <h3>Doctors</h3>
                </div>
            </div>
        </div>
        <div class="row">
           
                
            <div class="col-xl-12">
                <div class="expert_active owl-carousel">
                    @foreach (var doctor in ViewBag.listDoctor)
                    {
                    <div class="single_expert">
                        <div class="expert_thumb">
                                <img src="~/img/doctor/@doctor.ImagePath" alt="">
                        </div>
                        <div class="experts_name text-center">
                                <h3>@doctor.Fullname</h3>
                                <span>@doctor.SpecializationName</span>
                        </div>
                    </div>
                    }
                </div>
            </div>
            
        </div>
    </div>
</div>
<!-- expert_doctors_area_end -->

